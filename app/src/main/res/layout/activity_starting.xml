<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.windows.joeychatapp.StartingActivity">


    <ImageView
        android:layout_width="1080px"
        android:layout_height="342dp"
        android:src="@drawable/logo1000x684"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="14dp"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/BTN_LOGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_login"
            android:backgroundTint="@color/buttonPositive"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_or"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="8dp"/>
        <Button
            android:id="@+id/BTN_CREATEACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_createanccount"
            android:backgroundTint="@color/buttonNegative"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="12dp"/>

    </LinearLayout>
</RelativeLayout>
